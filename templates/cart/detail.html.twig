{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table table-info table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ cart.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ cart.price }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ cart.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cart_index') }}" class="btn btn-secondary">Back to list</a>
    <div>
        <form method="post" action="{{ path('cart_delete', {'id': cart.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cart.id) }}">
            <button class="btn-danger">Delete</button>
        </form>
    </div>

    {# {{ include('cart/_delete_form.html.twig') }} #}
{% endblock %}
