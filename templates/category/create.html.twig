{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <h2 class="mt-5 mb-5 text-center text-success"> Create category </h2>
    <div class="col-md-6 offset-md-3"></div>
    {{ form_start (form) }}
        <div class="form-group">
            <h6 class="text-primary"> Category Name </h6>
            {{ form_widget (form.name, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        
        <div class="form-group text-center mt-2">
            <button class="btn btn-info mt-2">CREATE</button>
        </div>
        <div class="form-group text-center mt-2">
            <a class="btn btn-secondary" href="{{ path ('category_index')}}">Back to list</a>
       </div>
    {{ form_end (form) }}
</div>
{% endblock %}