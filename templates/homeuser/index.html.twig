<body>
<div id="content">
  <div id="header">
    <div class="topong">
          <div class="image mt-xxl-4">
        {% set image = 'cart.png' %}
        <img src="{{ asset('img/' ~ image) }}" width='20%' height='20%'>
         <h4><a href="{{ path ('cart_index') }}">VIEW CART</a></h4>      
         
    </div>     
    </div>
    <div class="topong">
      <div class="pad">
        <span class="txt"></span> </div>
    </div>
    <a href="{{ path ('home')}}">
      <h1><span class="green bigl">S</span>hopping<span class="green bigl">I</span>ker</h1>
    </a>
    <span class="slogan">You can buy all everythings here</span> </div>
  <div id="menu">
    <div class="pad">
      <div id="search">
        <form action="/home/user" method="get">
          <p>
            <input type="text" color="white" class="form"name="name" size="10px" maxlength="250" class="text" value=""  />
            <input type="submit" value="SEARCH" class="txt" />
          </p>
        </form>
      </div>
      <div class="submit">
        <ul>
          {# <li><a href="#"><span>HOME</span></a></li> #}
          <li><a href="{{ path ('home_user1')}}"><span> All</span></a></li>
          <div >
               {% for category in category %}
            <tr>              
                <a scope="row" style=""  href="{{ path ('home_user' , {'id' : category.id })}} ">  {{ category.name }} </a>
            </tr>
               {% endfor %}
          </div>          
        </ul>
      </div>
    </div>
  </div>


      
        <div class="container-fluid">
          <div class="row">
            {% for product in products %}
                <div class="col-sm-3">
                    <div class="description">
                      <div > <h4> {{ product.name }} </h4> </div>
                      <div > 
                          <h4> {{ product.information }} $ </h4> 

                      </div>
                            <div>                                
                              <tr>              
                                  <a scope="row" class="btn btn-outline-success" style="width: 120px" href="{{ path ('home_user' , {'id' : product.category.id })}} ">  {{ product.category.name }} </a>
                              </tr>                               
                          </div>  

                      <div class="img mt-2">   
                        <div class="">  
                          <div class="w3-card">      
                            <td scope="row"> 
                                {% if product.picture == null %}
                                    <img src="{{ asset ('img/Toy/Gundam.png')}}" width="120px" height="120px" /> 
                                {% else %}    
                                    <img src="{{ asset ('img/Toy/' ~ product.picture)}}" width= "120px" height= "120px" />
                                {% endif %}  
                            </td>    
                          </div>
                        </div>                   
                      </div>

                      <div >
                          <a class="btn btn-success mt-2 " style="width: 120px"  href="{{ path ('product_detail', {'id' : product.id} )}}">Detail</a>   
                          <button class="btn btn-warning mt-2" style="width: 120px" onclick="addProduct('{{ product.id }}', '{{ product.name }}', '{{ product.information }}', '{{ product.picture }}' )"> Add to cart </button> 
                      </div>
                    </div>
                </div>
            {% endfor %}
          </div>
        </div>
 
  <div id="footer">
    <p class="right">Copyright &copy; 2006 Your Company, Design: <a href="http://www.free-css-templates.com">free-css-templates.com</a></p>
    <p><a href="#">Home</a> &middot; <a href="#">Contact</a> &middot; <a href="#">Accessibility</a> &middot; <a href="#">Products</a> &middot; <a href="#">Disclaimer</a> &middot; <a href="http://jigsaw.w3.org/css-validator/check/referer">CSS</a> and <a href="http://validator.w3.org/check?uri=referer">XHTML</a><br />
    </p>
  </div>
</div>
</body>
</html>








