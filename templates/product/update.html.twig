{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <h2 class="mt-5 mb-5 text-center text-success"> Create product </h2>
    <div class="col-md-6 offset-md-3"></div>
    {{ form_start (form) }}
        <div class="form-group">
            <h6 class="text-primary"> Product Name </h6>
            {{ form_widget (form.name, {'attr' : {'class' : 'form-control'}}) }}
        </div>

        <div class="form-group">
            <h6 class="text-primary"> Product Price </h6>
            {{ form_widget (form.information, {'attr' : {'class' : 'form-control'}}) }}
        </div>

        <div class="form-group">
            <h6 class="text-primary"> Product Picture </h6>
            {{ form_widget (form.picture, {'attr' : {'class' : 'form-control'}}) }}
        </div>

         {# <div class="form-group">
            <h6 class="text-primary"> Product Price </h6>
            {{ form_widget (form.price, {'attr' : {'class' : 'form-control'}}) }}
        </div> #}

        <div class="form-group">
            <h6 class="text-primary"> Category </h6>
            {{ form_widget (form.category, {'attr' : {'class' : 'form-control'}}) }}
        </div>

        <div class="form-group text-center mt-2">
            <button class="btn btn-info mt-2">UPDATE</button>
        </div>
        
        <div class="form-group text-center mt-2">
            <a class="btn btn-outline-success" href="{{ path ('product_index')}}">Back to list</a>
       </div>
    {{ form_end (form) }}
</div>
{% endblock %}